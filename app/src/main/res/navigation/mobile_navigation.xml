<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_map">

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.levelupcluster.go4lunch.ui.mapView.MapViewFragment"
        android:label="@string/title_map_view"
        tools:layout="@layout/fragment_map_view" >
        <action
            android:id="@+id/action_navigation_map_to_navigation_restaurant"
            app:destination="@id/navigation_restaurant" />
    </fragment>

    <fragment
        android:id="@+id/navigation_list"
        android:name="com.levelupcluster.go4lunch.ui.listView.ListViewFragment"
        android:label="@string/title_list_view"
        tools:layout="@layout/fragment_list_view" >
        <action
            android:id="@+id/action_navigation_list_to_navigation_restaurant"
            app:destination="@id/navigation_restaurant" />

    </fragment>


    <fragment
        android:id="@+id/navigation_workmates"
        android:name="com.levelupcluster.go4lunch.ui.workmates.WorkmatesFragment"
        android:label="@string/title_workmates"
        tools:layout="@layout/fragment_workmates" />

    <fragment
        android:id="@+id/navigation_restaurant"
        android:name="com.levelupcluster.go4lunch.ui.restaurantView.RestaurantViewFragment"
        android:label="@string/title_restaurant_details"
        tools:layout="@layout/fragment_restaurant_view"/>

</navigation>