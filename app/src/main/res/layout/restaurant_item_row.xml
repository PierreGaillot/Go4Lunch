<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/restaurant_item_row_imageView"
        android:layout_width="@dimen/restaurant_item_row_image"
        android:layout_height="@dimen/restaurant_item_row_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_login" />

    <TextView
        android:id="@+id/restaurant_item_row_displayName_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom du restaurantNom du restaurantNom du restaurantNom du restaurantNom du restaurant"
        android:ellipsize="end"
        android:maxEms="14"
        android:singleLine="true"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/restaurant_item_row_info_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="type - adresse"
        android:ellipsize="end"
        android:maxEms="14"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/restaurant_item_row_status_textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_item_row_displayName_textView" />

    <TextView
        android:id="@+id/restaurant_item_row_status_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="status"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/restaurant_item_row_distance_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="100m"
        app:layout_constraintEnd_toStartOf="@+id/restaurant_item_row_imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/restaurant_item_row_ratingBar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/restaurant_item_row_imageView" />

    <LinearLayout
        android:id="@+id/restaurant_item_row_participationContainer_LL"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/restaurant_item_row_ratingBar"
        app:layout_constraintEnd_toStartOf="@+id/restaurant_item_row_imageView"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_item_row_distance_textView">

        <ImageView
            android:id="@+id/restaurant_item_row_participation_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_person_outline_24" />

        <TextView
            android:id="@+id/restaurant_item_row_paricipation_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(1)" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>