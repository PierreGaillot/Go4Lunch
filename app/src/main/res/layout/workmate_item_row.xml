<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/workmate_item_row_profile_imageView"
        android:layout_width="@dimen/workmate_profile_item_row"
        android:layout_height="@dimen/workmate_profile_item_row"
        android:layout_weight="0"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/go4lunch_bg_large"

        />

    <TextView
        android:id="@+id/workmate_item_row_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:text="TextView" />
</LinearLayout>